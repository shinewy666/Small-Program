.gray {
  color: #999999;
}

.red {
  color: #FF4444;
}

.fs {
  font-size: 28rpx;
}

.top {
  display: flex;
  justify-content: space-around;
  border-bottom: 20rpx solid #FAFAFA;
}

.ordernumber {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 20rpx;
}

.bg {
  display: flex;
  justify-content: space-between;
  background: #FAFAFA;
}

.bg>image {
  width: 200rpx;
  height: 200rpx;
  margin-left: 20rpx;
}

.bg .seal {
  margin-right: 200rpx;
}

.bg .seal1 .aaa {
  font-size: 28rpx;
}

.allgoods {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
}

.btlist {
  display: flex;
  justify-content: space-between;
  border-top: 2rpx solid #FAFAFA;
  border-bottom: 20rpx solid #FAFAFA;
}

.btlist .bt>text {
  display: inline-block;
  margin: 10rpx 15rpx;
  padding: 10rpx 50rpx;
  border: 5rpx solid #FAFAFA;
}